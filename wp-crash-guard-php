                                </option>
                                <option value="reload" <?php selected($settings['visitor_mode'], 'reload'); ?>>
                                    <?php esc_html_e('Automatically reload the page', 'wp-crash-guard'); ?>
                                </option>
                                <option value="maintenance" <?php selected($settings['visitor_mode'], 'maintenance'); ?>>
